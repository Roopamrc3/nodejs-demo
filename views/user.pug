doctype html
html(lang='en')
  head
    include head
    script(type='text/javascript').
      $(document).ready(function() {
          var grant = !{grant};
          $('#nodejs-demo-user-picture').append($('<img/>', { src: 'data:' + grant.picture.mime + ';base64,' + grant.picture.content }));
          $('#nodejs-demo-user-info').append($('<h4/>').text(grant.firstname + ' ' + grant.lastname)).append($('<p/>').text(grant.email));
      });
  body
    #nodejs-demo
      include header
      #modejs-demo-user-picture.col-md-2
      #nodejs-demo-user-info.col-md-10
      include footer